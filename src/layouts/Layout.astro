---
import "../style/base.css";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-gradient-to-r from-black via-gray-800 to-black text-white bg-[length:300%_100%] animate-gradient-move mt-3"
  >
    <slot />

    <audio id="background-music" src="/music.wav" loop transition:persist
    ></audio>
    <Footer />
    <script is:inline>
      // Play background music on first user interaction (click, keydown, or touch)
      window.addEventListener("DOMContentLoaded", function () {
        const audio = document.getElementById("background-music");
        if (!audio) return;
        const playAudio = () => {
          audio.play().catch(() => {});
          window.removeEventListener("click", playAudio);
          window.removeEventListener("keydown", playAudio);
          window.removeEventListener("touchstart", playAudio);
        };
        window.addEventListener("click", playAudio);
        window.addEventListener("keydown", playAudio);
        window.addEventListener("touchstart", playAudio);
      });
    </script>
    <script
      is:inline
      defer
      src="https://umami.vahry.my.id/script.js"
      data-website-id="75481fc6-bb1d-48c4-a561-8d607a727a1d"></script>
  </body>
</html>
